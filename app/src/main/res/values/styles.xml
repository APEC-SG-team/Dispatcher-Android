<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="MyToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Title text -->
        <item name="android:textColorPrimary">@color/textColor</item>

        <!-- Title color in AppCompat.Light  -->
        <item name="android:textColorPrimaryInverse">@color/textColor</item>

        <!-- Menu text-->
        <item name="actionMenuTextColor">@color/textColor</item>
        <!-- Overflow -->
        <item name="android:textColorSecondary">@color/textColor</item>
        <!-- This will change drawer icon -->

        <!-- background of the  -->
        <item name="android:background">@color/toolbarColor</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
